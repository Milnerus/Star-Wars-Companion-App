                    android:id="@+id/header_ep8_premiere_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_ep8"
                    android:layout_toRightOf="@id/header_ep8_premiere"
                    android:text="@string/premiere_ep8"
                    android:textColor="@color/spaceGold"/>
                <!-- Režie -->
                <TextView
                    android:id="@+id/header_ep8_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep8_premiere"
                    android:layout_marginRight="@dimen/text_block"
                    android:text="@string/header_director"
                    android:textColor="@color/darkside_red"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/header_ep8_director_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep8_premiere"
                    android:layout_toRightOf="@id/header_ep8_director"
                    android:text="@string/director_ep8"
                    android:textColor="@color/spaceGold"/>
                <!-- Herci -->
                <TextView
                    android:id="@+id/header_ep8_actors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep8_director"
                    android:layout_marginRight="@dimen/text_block"
                    android:text="@string/header_actors"
                    android:textColor="@color/darkside_red"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/header_ep8_actors_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep8_actors"
                    android:layout_marginBottom="@dimen/img_block"
                    android:text="@string/actors_ep8"
                    android:textColor="@color/spaceGold"/>
                <!-- Popis -->
                <TextView
                    android:id="@+id/header_ep8_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep8_actors_content"
                    android:text="@string/desc_ep8"
                    android:textColor="@color/spaceGold"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <!-- Epizoda IX -->
            <RelativeLayout
                android:id="@+id/layout_ep9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/spinner">
                <!-- Plakát -->
                <ImageView
                    android:id="@+id/image_ep9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/img_block"
                    android:src="@drawable/ep9"/>
                <!-- Premiéra -->
                <TextView
                    android:id="@+id/header_ep9_premiere"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_ep9"
                    android:layout_marginRight="@dimen/text_block"
                    android:text="@string/header_premiere"
                    android:textColor="@color/darkside_red"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/header_ep9_premiere_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/image_ep9"
                    android:layout_toRightOf="@id/header_ep9_premiere"
                    android:text="@string/premiere_ep9"
                    android:textColor="@color/spaceGold"/>
                <!-- Režie -->
                <TextView
                    android:id="@+id/header_ep9_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep9_premiere"
                    android:layout_marginRight="@dimen/text_block"
                    android:text="@string/header_director"
                    android:textColor="@color/darkside_red"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/header_ep9_director_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep9_premiere"
                    android:layout_toRightOf="@id/header_ep9_director"
                    android:text="@string/director_ep9"
                    android:textColor="@color/spaceGold"/>
                <!-- Herci -->
                <TextView
                    android:id="@+id/header_ep9_actors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep9_director"
                    android:layout_marginRight="@dimen/text_block"
                    android:text="@string/header_actors"
                    android:textColor="@color/darkside_red"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/header_ep9_actors_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_ep9_director"
                    android:layout_toRightOf="@id/header_ep9_actors"
                    android:text="@string/actors_ep9"
                    android:textColor="@color/spaceGold"/>
                <!-- Popis -->
                <TextView
                    android:id="@+id/header_ep9_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/img_block"
                    android:layout_below="@id/header_ep9_actors"
                    android:text="@string/desc_ep9"
                    android:textColor="@color/spaceGold"
                    android:textStyle="bold"/>
            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
