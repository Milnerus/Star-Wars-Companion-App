<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.schoolproject.starwarscompanion">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Episodes"
            android:label="@string/title_activity_episodes"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.schoolproject.starwarscompanion.MainActivity" />
        </activity>
        <activity
            android:name=".CharactersActivity"
            android:label="@string/title_activity_characters"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.schoolproject.starwarscompanion.MainActivity" />
        </activity>
        <activity
            android:name=".CinemaActivity"
            android:label="@string/title_activity_cinema"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.schoolproject.starwarscompanion.MainActivity" />
        </activity>
        <activity
            android:name=".MovieActivity"
            android:label="@string/title_activity_movie"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.schoolproject.starwarscompanion.MainActivity" />
        </activity>
    </application>

</manifest>
